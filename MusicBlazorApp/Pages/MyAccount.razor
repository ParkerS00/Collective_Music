@page "/my-account"

<div style="max-width: 1000px; margin-left: auto; margin-right: auto;">
    <h1>Hello </h1>

    <div class="row">
        <div class="col-md-8">
            <div class="border" style="border: solid 1px gray; border-radius: 15px; padding: 50px;">
                <h3>Your Upcoming Rentals</h3>
                <div style="background-color: #ededed; border-radius: 15px; padding: 40px;">
                    <h5>Item Name</h5>
                    <p>Checked Out Date and Time</p>
                    <p>Due Date and Time</p>
                </div>
            </div>
            <div class="border my-5" style="border: solid 1px gray; border-radius: 15px; padding: 50px;">
                <h3>Previous Purchases</h3>
                <div style="background-color: #ededed; border-radius: 15px; padding: 40px;">
                    <h5>Purchase Date</h5>
                    <p>Pickup Date</p>
                    <p>Purchase Total</p>
                    <ul>
                        <li>Item One</li>
                        <li>Item Two</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div style="border: solid 1px gray; border-radius: 30px; height: 200px; padding: 20px;">
                <h3>Customer Points</h3>
                <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar" style="width: 20%; background-color: darkred;"></div>
                </div>
                <p># until your next free purchase!</p>
            </div>
            <div class="my-3" style="border: solid 1px gray; border-radius: 30px; height: 100px; padding: 20px;">
                <h3>Configure your Profile</h3>
            </div>
        </div>
    </div>
</div>

